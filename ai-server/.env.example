# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=ai-server
MQTT_USERNAME=user
MQTT_PASSWORD=password
MQTT_KEEPALIVE=60
MQTT_QOS=1
MQTT_CLEAN_SESSION=true

# gRPC Server
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
GRPC_MAX_WORKERS=4

# AI Server Settings
AI_SERVER_ID=ai-server-001
LOG_LEVEL=INFO
DEBUG_MODE=true

# Service Settings
ENABLE_STT=true
ENABLE_LLM=true
ENABLE_TTS=true
ENABLE_VISION=true

# Model Paths (STT accepts model size strings like "small.en" or local CTranslate2 directory paths)
STT_MODEL_PATH=small.en
STT_MODEL_DOWNLOAD_ROOT=models/stt
LLM_MODEL_PATH=models/llm/model_path
TTS_MODEL_PATH=models/tts/model_path
VISION_MODEL_PATH=models/vision/model_path